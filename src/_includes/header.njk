<header>
  <div class="container">
    <nav class="header-nav">
      <ul class="header-nav__links-list">
        <li class="header-nav__links-list-item header-nav__links-list-item--logo">
          <a class="header-nav__link" href="/">Sam Hopkins</a>
        </li>

        <li class="header-nav__links-list-item header-nav__links-list-item--mobileMenuButton" >
          <button>--</button>
        </li>

          {% for link in constants.menuItems %}
            {% set linkSlug = "/" ~ link.slug %}
            <li class="header-nav__links-list-item header-nav__links-list-item--desktopButtons {%if linkSlug in page.url %}header-nav__links-list-item--active{% endif %}" >
              <a class="header-nav__link" href={{ linkSlug }}>{{ link.title }}</a>
            </li>
          {% endfor %}

      </ul>
    </nav>
  </div>
</header>