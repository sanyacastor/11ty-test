{% if card_data.data.targetUrl %}
  <a href="{{card_data.data.targetUrl}}" class="summary-card-wrap dynamic-wrap">
{% else %}
{%- if card_data.data.isNonClickable == true -%}
  <a href="{{previewURL}}" class="summary-card-wrap static-wrap">
{%- else -%}
  <a href="{{previewURL}}" class="summary-card-wrap dynamic-wrap">
{% endif %}

  {% endif %}<div class="cardcabinet_summaryCard"><!-- otherwise it renders <p></p>-->
    <div class = "cardcabinet_oulineBox">
        {%- if card_data.data.title.length > 25 -%}
          <div class="cardcabinet_cardTitle_container cardcabinet_cardTitle_container--marquee">
            <h2 class="cardcabinet_cardTitle">{{card_data.data.title}}</h2>
          </div>
        {%- else -%}
          <div class="cardcabinet_cardTitle_container">
           <h2 class="cardcabinet_cardTitle">{{card_data.data.title}}</h2>
          </div>
        {% endif %}
        {%- if card_data.data.dates -%}
          <p class="cardcabinet_dates"> {{card_data.data.dates}} </p>
        {%- else -%}
          <p class="cardcabinet_dates"> unknown year </p>
        {%- endif -%}
        <div class="cardcabinet_collaborators"> 
          {%- if card_data.data.collaborators.length > 0  -%} 
            with: {{card_data.data.collaborators}}
          {%- else -%}
            personal
          {%- endif -%}
        </div>
        <div class="cardcabinet_cardDescriptionWrapper">
          <div class="cardcabinet_cardDescription"> {{card_data.data.cardDescription}} </div>
        </div>
    </div>
  </div>
</a>

<script>
  var cardDescriptionWrappers = document.querySelectorAll('.cardcabinet_cardDescriptionWrapper');
  
  cardDescriptionWrappers.forEach(function(wrapper) {
      var height = wrapper.offsetHeight; 

      var cardDescription = wrapper.querySelector('.cardcabinet_cardDescription');

      var lineHeight = parseFloat(getComputedStyle(cardDescription).lineHeight);
      var numLineHeights = (height / lineHeight);

      cardDescription.style['-webkit-line-clamp'] = Math.floor(numLineHeights);
  });
